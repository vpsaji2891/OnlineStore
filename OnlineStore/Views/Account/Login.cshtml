@model OnlineStore.Models.User
<form asp-action="Login" asp-controller="Account">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email" class="control-label">User Name</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Username" type="text" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Enter Password" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
        <hr />
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary float-right" />
        </div>
    </div>
</form>
