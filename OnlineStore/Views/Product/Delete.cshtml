@model OnlineStore.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h5>Delete Product</h5>

<h6 class="text-warning">Are you sure you want to delete this?</h6>
<div>
    <hr />

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ProductPrice)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ImgUrl)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ImgUrl)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger float-right" />  <br /><hr />
                    <a asp-action="Index">Back to Product List</a>
                </form>
            </div>
            <div class="col-md-6">
                <label class="control-labe">Product Preview </label><br />
                <div class="product-img">
                    <img class="img-thumbnail img-responsive" src=@Model.ImgStram />
                </div>
            </div>

        </div>
    </div>

</div>
